<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:contentDescription="Select destination location"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toSpinnerLabel"
        android:contentDescription="Select your destination room from the dropdown below."
        android:textSize="25dp"

        />
    <Spinner
        android:id="@+id/toSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/toSpinnerLabel"

        />
    <Button
        android:id="@+id/startNavigationButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/startNavigation"
        />

</LinearLayout>