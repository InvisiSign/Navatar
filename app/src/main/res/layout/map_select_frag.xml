<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvcampusselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Select campus from the dropdown below or use the find my location button. To repeat a previous route, use the previous navigations button."
        android:text="Select Campus"
        android:textSize="25dp"/>

    <Spinner
        android:id="@+id/mapSpinner"
        style="android:spinnerStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="178dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Find My Location"/>

    <Button
        android:id="@+id/qrButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="178dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Scan QR Code" />

    <Button
        android:id="@+id/navHistoryBut"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="178dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Previous Navigations"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />


</FrameLayout>